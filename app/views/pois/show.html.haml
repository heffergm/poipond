    %label.control-label{ :for=>'addr_city' } City
    %input.form-control.input-lg#addr_city{ :type=>'text', :name=>'addr_city', :value=>@poi.addr_city, :placeholder=>'Add me!' }
  .form-group
    %label.control-label{ :for=>'addr_postcode' } Postal Code
