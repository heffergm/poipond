  .form-group
    %label.control-label{ :for=>'website' } Website
    %input.form-control.input-lg#website{ :type=>'text', :name=>'website', :value=>@poi.website, :placeholder=>'Add me!' }
  .form-group
    %label.control-label{ :for=>'amenity' } Amenity
    %input.form-control.input-lg#amenity{ :type=>'text', :name=>'amenity', :value=>@poi.amenity, :placeholder=>'Add me!' }
